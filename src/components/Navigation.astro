---
import Logo from "./Logo.astro"
// import ThemeIcon from "./ThemeIcon.astro"
import HamburgerMenu from "./HamburgerMenu.astro"

type navLink = {
  id: number
  href: string
  label: string
}

const navLinks: navLink[] = [
  { id: 1, label: "Home", href: "/" },
  { id: 2, label: "Store", href: "/store" },
  { id: 3, label: "About", href: "/about" },
]
---

<header class='px-5 flex justify-between items-center'>
  <Logo />
  <nav transition:animate='slide' class='nav-links hidden sm:flex gap-4'>
    {
      navLinks.map(({ label, href }) => (
        <a
          href={href}
          class='text-sm text-gray-500 hover:text-orange-600 hover:underline hover:decoration-orange-400 transition-colors'
        >
          {label}
        </a>
      ))
    }
  </nav>
  <!-- <ThemeIcon /> -->
  <HamburgerMenu />
</header>
